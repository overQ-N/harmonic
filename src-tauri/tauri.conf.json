{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "harmonic",
  "version": "0.1.0",
  "identifier": "com.jr.harmonic",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "harmonic",
        "width": 800,
        "height": 600
      },
      {
        "label": "lyrics",
        "title": "Harmonic Lyrics",
        "width": 400,
        "height": 300,
        "decorations": false,
        "shadow": false,
        "alwaysOnTop": true,
        "transparent": true,
        "resizable": false,
        "focus": false,
        "skipTaskbar": true,
        "url": "#/lyrics",
        "visible": false,
        "minimizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
